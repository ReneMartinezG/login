<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>App</title>
    <%- include("partials/cdn.ejs"); %>
    <link rel="stylesheet" href="resources/css/logincss.css">
</head>
<body>
    <!--Login-->
<section class="vh-100 gradient-custom">
  <form action="register" method="POST">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">
    
                <div class="mb-md-5 mt-md-4 pb-5">
    
                  <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                  <p class="text-white-50 mb-5">Please create username and password!</p>
                  
                  <div class="form-floating mb-4 text-dark">
                    <input type="text" id="userman" name="txtusername" class="form-control" placeholder="Username" required/>
                    <label for="usermane">User name</label>
                  </div>

                  <div class="mb-4 text-dark">
                    <div class="form-floating">
                        <select class="form-select" id="floatingSelect" name="selectrol" aria-label="Floating label select example" required>
                          <option selected value="">select rol</option>
                          <option value="admin">Admin</option>
                          <option value="data entry">Data entry</option>
                          
                        </select>
                        <label for="floatingSelect">rol</label>
                      </div>
                  </div>
    
                  <div class="form-floating mb-4 text-dark">
                    <input type="password" id="password" class="form-control" name="txtpassword" placeholder="Password" required/>
                    <label for="password">Password</label>
                  </div>
    
                  <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="/login">Already have an account?</a></p>
    
                  <input type="submit" class="btn btn-outline-light btn-lg px-5" value="Sing up"/>
    
                  <!-- <div class="d-flex justify-content-center text-center mt-4 pt-1">
                    <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                    <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                    <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                  </div>
    
                </div> -->
    
                <div class="d-flex justify-content-center text-center mt-5 pt-1">
                  <p class="mb-0">Don't have an account? <a href="#!" class="text-white-50 fw-bold">Sign Up</a></p>
                </div>
    
              </div>
            </div>
          </div>
        </div>
      </div>
  </form>
</section>



    <%- include("partials/footer.ejs"); %>
    <% if(typeof alert != "undefined") {%>
        <script>
            swal.fire({
                title: "<%= alertTitle %>",
                text: "<%= alertMessage %>",
                icon: "<%= alertIcon %>",
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(()=>{
                window.location="/ <%= ruta %>";
            });
        </script>
<% } %>
</body>
</html>